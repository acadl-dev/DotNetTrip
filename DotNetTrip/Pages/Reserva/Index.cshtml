@page
@model DotNetTrip.Pages.Reserva.IndexModel
@{
    ViewData["Title"] = "Lista de Reservas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Lista de Reservas</h1>
    <a asp-page="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Criar Nova Reserva
    </a>
</div>

@if (!Model.Reserva.Any())
{
    <div class="alert alert-info" role="alert">
        <i class="fas fa-info-circle"></i> Nenhuma reserva encontrada.
        <a asp-page="Create" class="alert-link">Criar a primeira reserva</a>.
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Cliente</th>
                            <th>Pacote Turístico</th>
                            <th>Data da Reserva</th>
                            <th>Preço</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Reserva)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-primary">#@item.Id</span>
                                </td>
                                <td>
                                    @if (item.Cliente != null)
                                    {
                                        <div>
                                            <strong>@item.Cliente.Nome</strong><br>
                                            <small class="text-muted">@item.Cliente.Email</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Cliente não encontrado</span>
                                    }
                                </td>
                                <td>
                                    @if (item.PacoteTuristico != null)
                                    {
                                        <div>
                                            <strong>@item.PacoteTuristico.Titulo</strong><br>
                                            <small class="text-muted">
                                                Capacidade: @item.PacoteTuristico.CapacidadeMaxima pessoas
                                            </small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Pacote não encontrado</span>
                                    }
                                </td>
                                <td>
                                    <div>
                                        @item.DataReserva.ToString("dd/MM/yyyy")<br>
                                        <small class="text-muted">@item.DataReserva.ToString("HH:mm")</small>
                                    </div>
                                </td>
                                <td>
                                    @if (item.PacoteTuristico != null)
                                    {
                                        <span class="fw-bold text-success">
                                            R$ @item.PacoteTuristico.Preco.ToString("N2")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info btn-sm"
                                           title="Ver Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-page="./Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-warning btn-sm"
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger btn-sm"
                                           title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <small class="text-muted">
            Total de reservas: <strong>@Model.Reserva.Count()</strong>
        </small>
    </div>
}

<!-- Adicione Font Awesome se ainda não tiver -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .table th {
        border-top: none;
        font-weight: 600;
    }

    .btn-group .btn {
        margin: 0 1px;
    }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }

    .table-responsive {
        border-radius: 0.375rem;
    }
</style>