@page
@model DotNetTrip.Pages.PacoteTuristico.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>PacoteTuristico</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PacoteTuristico.Titulo" class="control-label"></label>
                <input asp-for="PacoteTuristico.Titulo" class="form-control" />
                <span asp-validation-for="PacoteTuristico.Titulo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PacoteTuristico.DataInicio" class="control-label"></label>
                <input asp-for="PacoteTuristico.DataInicio" class="form-control" />
                <span asp-validation-for="PacoteTuristico.DataInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PacoteTuristico.CapacidadeMaxima" class="control-label"></label>
                <input asp-for="PacoteTuristico.CapacidadeMaxima" class="form-control" />
                <span asp-validation-for="PacoteTuristico.CapacidadeMaxima" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PacoteTuristico.Preco" class="control-label"></label>
                <input asp-for="PacoteTuristico.Preco" class="form-control" />
                <span asp-validation-for="PacoteTuristico.Preco" class="text-danger"></span>
            </div>

            <!-- ADICIONAR ESTA SEÇÃO: Seleção de Destinos -->
            <div class="form-group">
                <label class="control-label">Destinos</label>
                @if (Model.DestinosDisponiveis != null && Model.DestinosDisponiveis.Any())
                {
                    <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                        @foreach (var destino in Model.DestinosDisponiveis)
                        {
                            <div class="form-check">
                                <input type="checkbox"
                                       name="DestinosSelecionados"
                                       value="@destino.Id"
                                       class="form-check-input"
                                       id="destino_@destino.Id" />
                                <label class="form-check-label" for="destino_@destino.Id">
                                    @destino.Cidade, @destino.Pais
                                </label>
                            </div>
                        }
                    </div>
                    <small class="form-text text-muted">Selecione os destinos incluídos neste pacote</small>
                }
                else
                {
                    <div class="alert alert-warning">
                        Nenhum destino cadastrado. <a asp-page="/Destino/Create">Criar novo destino</a>
                    </div>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <!-- Seção para Cálculo de Desconto -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Calculadora de Desconto (10%)</h5>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label class="control-label">Valor Original</label>
                    <input id="precoOriginal" class="form-control" type="number" step="0.01" min="0" placeholder="Digite o preço para calcular o desconto" />
                    <small class="form-text text-muted">O desconto será calculado automaticamente conforme você digita</small>
                </div>

                <!-- Área de resultado que aparece dinamicamente -->
                <div id="resultadoCalculo" class="mt-3 alert alert-success" style="display: none;">
                    <h6>Resultado do Cálculo (Delegate CalculateDelegate):</h6>
                    <p><strong>Valor Original:</strong> R$ <span id="valorOriginal">0,00</span></p>
                    <p><strong>Desconto (10%):</strong> <span class="text-success">- R$ <span id="valorDesconto">0,00</span></span></p>
                    <p><strong>Valor Final:</strong> <span class="text-primary font-weight-bold">R$ <span id="valorFinal">0,00</span></span></p>
                </div>
            </div>
        </div>

        <!-- Informações sobre o Delegate -->
        <div class="mt-3 alert alert-info">
            <h6>Sobre o Delegate</h6>
            <p class="mb-0">
                Esta funcionalidade utiliza um <strong>delegate</strong> personalizado chamado
                <strong>CalculateDelegate</strong> para encapsular a lógica de desconto de 10%.
            </p>
        </div>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const precoOriginalInput = document.getElementById('precoOriginal');
            const resultadoDiv = document.getElementById('resultadoCalculo');
            const valorOriginalSpan = document.getElementById('valorOriginal');
            const valorDescontoSpan = document.getElementById('valorDesconto');
            const valorFinalSpan = document.getElementById('valorFinal');
            let timeoutId;

            precoOriginalInput.addEventListener('input', function() {
                const valor = parseFloat(this.value);

                clearTimeout(timeoutId);

                if (!valor || valor <= 0) {
                    resultadoDiv.style.display = 'none';
                    return;
                }

                timeoutId = setTimeout(function() {
                    calcularDescontoAjax(valor);
                }, 500);
            });

            function calcularDescontoAjax(preco) {
                fetch('/PacoteTuristico/Create?handler=CalcularDesconto', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(preco)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.sucesso) {
                        valorOriginalSpan.textContent = data.precoOriginal.toFixed(2).replace('.', ',');
                        valorDescontoSpan.textContent = data.valorDesconto.toFixed(2).replace('.', ',');
                        valorFinalSpan.textContent = data.precoComDesconto.toFixed(2).replace('.', ',');
                        resultadoDiv.style.display = 'block';
                    }
                })
                .catch(error => {
                    console.error('Erro ao calcular desconto:', error);
                    resultadoDiv.style.display = 'none';
                });
            }
        });
    </script>
}