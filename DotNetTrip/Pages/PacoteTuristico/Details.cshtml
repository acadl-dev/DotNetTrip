@page
@model DotNetTrip.Pages.PacoteTuristico.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Pacote";
}

<h1>Detalhes do Pacote</h1>

<div>
    <h4>Informações do Pacote</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacoteTuristico.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacoteTuristico.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacoteTuristico.DataInicio)
        </dt>
        <dd class="col-sm-10">
            @Model.PacoteTuristico.DataInicio.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacoteTuristico.CapacidadeMaxima)
        </dt>
        <dd class="col-sm-10">
            @Model.PacoteTuristico.CapacidadeMaxima
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacoteTuristico.Preco)
        </dt>
        <dd class="col-sm-10">
            @Model.PacoteTuristico.Preco.ToString("C")
        </dd>
    </dl>
</div>

<hr />

<div>
    <h4>Simulação de Reservas</h4>
    <p><strong>Reservas já feitas:</strong> @Model.QuantidadeReservas</p>
    <p><strong>Valor Total das Reservas:</strong> @Model.ValorTotalReservas.ToString("C")</p>
</div>

<hr />

<div>
    <a asp-page="./Edit" asp-route-id="@Model.PacoteTuristico.Id" class="btn btn-primary">Editar</a>
    <a asp-page="./Index" class="btn btn-secondary">Voltar para a lista</a>
</div>
